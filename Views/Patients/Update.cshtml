@model Hospital.Models.Patients

    <section class="content-header">
        <h1>
            Pacientes
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/Home/Index"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Pacientes</li>
        </ol>
    </section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Atualizar dados</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post" action="/Patients/UpdatePatient">
            <div class="box-body">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Nome</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Name" value="@Model.Name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Fone</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Phone" value="@Model.Phone">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Sexo</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Gender" value="@Model.Gender">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Saúde</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="HealthCondition" value="@Model.HealthCondition">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Medico</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="DoctorId" value="@Model.DoctorId">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Enfermeiro</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="NurseId" value="@Model.NurseId">
                    </div>
                </div>
                <input type="hidden" name="Id" value="@Model.Id" />
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-danger">Cancelar</button>
                <button type="submit" class="btn btn-success">Atualizar</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
</section>